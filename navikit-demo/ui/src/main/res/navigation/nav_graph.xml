<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.yandex.navikitdemo.ui.map.MapFragment"
        android:label="MapFragment">

        <action
            android:id="@+id/action_mapFragment_to_routeVariantsFragment"
            app:destination="@id/routeVariantsFragment" />
        <action
            android:id="@+id/action_mapFragment_to_guidanceFragment"
            app:destination="@id/guidanceFragment" />
    </fragment>

    <fragment
        android:id="@+id/routeVariantsFragment"
        android:name="com.yandex.navikitdemo.ui.routevariants.RouteVariantsFragment"
        android:label="RouteVariantsFragment">

        <action
            android:id="@+id/action_routeVariantsFragment_to_guidanceFragment"
            app:destination="@id/guidanceFragment"
            app:popUpTo="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/guidanceFragment"
        android:name="com.yandex.navikitdemo.ui.guidance.GuidanceFragment"
        android:label="GuidanceFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.yandex.navikitdemo.ui.settings.SettingsFragment"
        android:label="SettingsFragment">

        <argument
            android:name="screen"
            app:argType="com.yandex.navikitdemo.ui.settings.settingslist.SettingsScreen" />
    </fragment>

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment" />

    <action
        android:id="@+id/action_global_guidanceFragment"
        app:destination="@id/guidanceFragment" />

</navigation>
